<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import org.aion.wallet.ui.components.account.AccountCellFactory?>

<?import javafx.scene.shape.Line?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
            fx:controller="org.aion.wallet.ui.components.partials.AccountOverview">

    <VBox alignment="CENTER" spacing="10">
        <Label text="Accounts overview" styleClass="tile-label" alignment="CENTER"/>
        <Line endX="400.0" startX="-400.0" styleClass="line"/>
        <ScrollPane VBox.vgrow="NEVER" hbarPolicy="NEVER" vbarPolicy="NEVER" prefViewportHeight="240">
            <ListView fx:id="accountListView" styleClass="accounts-list">
                <cellFactory>
                    <AccountCellFactory/>
                </cellFactory>
            </ListView>
        </ScrollPane>
        <Button mnemonicParsing="false" text="Add account" onMouseClicked="#openAddAccountDialog"/>
    </VBox>

</AnchorPane>

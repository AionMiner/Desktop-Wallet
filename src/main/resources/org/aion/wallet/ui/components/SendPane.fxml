<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane id="sendPane" styleClass="main-pane" stylesheets="@mainPane.css"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.aion.wallet.ui.components.SendPane"
            prefWidth="850.0" prefHeight="348.0">
    <stylesheets>
        <URL value="@contentPane.css" />
    </stylesheets>
    <Pane layoutX="8.0">
        <HBox>
            <VBox>
                <Label prefHeight="50.0" text="Send funds" styleClass="main-text" />
                <VBox spacing="5.0" prefWidth="830.0">
                    <Label fx:id="fromLabel" prefHeight="26.0" prefWidth="830.0"/>
                    <PasswordField fx:id="passwordInput" promptText="Password" styleClass="input-fields"/>
                    <TextField fx:id="toInput" promptText="To" styleClass="input-fields"/>
                    <TextField fx:id="nrgInput" promptText="Energy" styleClass="input-fields"/>
                    <TextField fx:id="nrgPriceInput" promptText="Energy price" styleClass="input-fields"/>
                    <TextField fx:id="valueInput" promptText="Amount to send" styleClass="input-fields"/>
                    <Label fx:id="txStatusLabel"/>
                </VBox>
                <Button mnemonicParsing="false" onMouseClicked="#onSendAionClicked" text="Send aion" styleClass="button"/>
            </VBox>
        </HBox>

    </Pane>
</AnchorPane>
